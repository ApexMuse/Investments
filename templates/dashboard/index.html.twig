{% extends 'base.html.twig' %}

{% block title %}{{ parent() ~ title }}{% endblock title %}

{% block body %}
    <h4 class="mb-2">Total Value: ${{ total_value|number_format(2, '.', ',') }}</h4>
    <div class="row mt-4">
        <div class="col-12 mb-4">
            <table>
                <thead>
                    <tr>
                        <th>Account</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    {% for account in accounts %}
                        <tr>
                            <td>{{ account.name }}</td>
                            <td>${{ account.value|number_format(2, '.', ',') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock body %}